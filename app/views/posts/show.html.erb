<% content_for :page_title, @post.title %>

<section class="section">
	<div class="container">
		<nav class="level">
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <div class="level-right">
		  	<p class="level-item">
				<% if user_signed_in? && current_user.id == @post.user_id %>
		    		<%= link_to "Edit", edit_post_path(@post), class:"button" %>
				<% else %>
					<%= link_to "Edit", edit_post_path(@post), data: { confirm: "This is not your post you may not edit!" }, class:"button" %>
				<% end %>
		  	</p>
		  	<p class="level-item">
				<% if user_signed_in? && current_user.id == @post.user_id %>  
					<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				<% else %>
					<%= link_to "Delete", post_path(@post), data: { confirm: "This is not your post you may not delete!" }, class:"button is-danger" %>
				<% end %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @post.content %>
		</div>
		<div class="information">
			<span class="tag is-black"><%= @name %></span>
            <span class="tag is-black"><%= @username %> </span>
		</div>
	</div>
</section>